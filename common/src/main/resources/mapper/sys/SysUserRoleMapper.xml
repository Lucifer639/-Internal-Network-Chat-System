<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lucifer.pp.common.mapper.sys.SysUserRoleMapper">

    <select id="getRoleIdByUIDAndRoleCode" resultType="java.lang.Long">
        select
                sr.id
        from
                sys_role sr
        left join
                sys_user_role sur on sur.role_id=sr.id and sur.user_id=#{uid}
        where
                sr.role_code=#{roleCode} and sr.status=1
    </select>
</mapper>